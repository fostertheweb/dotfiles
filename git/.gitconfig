[alias]
    st = status -s
    blame = blame -C -C -C
    diff = diff --word-diff
    lol = log --oneline --decorate
    graph = log --oneline --graph --decorate --all

[branch]
    sort = -committerdate

[column]
    ui = auto

[commit]
    verbose = true

[core]
    excludesFile = ~/.gitignore
    pager = delta
	editor = nvim

[delta]
    # use n and N to move between diff sections
    navigate = true 
    light = false
    line-numbers = true

[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true

[fetch]
    prune = true
    pruneTags = true
    all = true

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

[grep]
    lineNumber = true
    patternType = perl

[help]
    autocorrect = prompt

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = zdiff3
    tool = nvim

[mergetool]
    prompt = false

[mergetool "nvim"]
    cmd = nvim -f -c "DiffviewOpen"

[push]
    default = simple
    autoSetupRemote = true
    followTags = true

[pull]
    rebase = true

[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true

[rerere]
    enabled = true
    autoupdate = true

[tag]
    sort = version:refname

