[alias]
    conflicts = diff --check --relative
    blame = blame -C -C -C
    d = -c diff.external=difft diff --word-diff
    graph = log --oneline --graph --decorate --all
    lol = log --oneline --decorate
    st = status -s

[branch]
    sort = -committerdate

[column]
    ui = auto

[commit]
    verbose = true

[core]
    excludesFile = ~/.gitignore
    editor = nvim

[difftool "difftastic"]
    cmd = difft "$MERGED" "$LOCAL" "abcdef1" "100644" "$REMOTE" "abcdef2" "100644"

[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
    ; external = difft
    tool = difftastic

[difftool]
    prompt = false

[fetch]
    prune = true
    pruneTags = true
    all = true

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

[grep]
    lineNumber = true
    patternType = perl

[help]
    autocorrect = prompt

[init]
    defaultBranch = main

[merge]
    tool = nvimdiff

[mergetool]
    prompt = false

[mergetool "nvimdiff"]
    layout = BASE,LOCAL + BASE,REMOTE + MERGED

[pager]
    difftool = true

[push]
    default = simple
    autoSetupRemote = true
    followTags = true

[pull]
    rebase = true

[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true

[rerere]
    enabled = true
    autoupdate = true

[tag]
    sort = version:refname

[user]
    name = Jonathan Foster
    email = fostertheweb@gmail.com

