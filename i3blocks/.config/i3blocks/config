# Global properties
command=$SCRIPT_DIR/$BLOCK_NAME
separator_block_width=40
markup=pango
separator=false

[docker]
interval=60

[volume]
interval=once
signal=1

[backlight]
interval=once
signal=2

[memory]
interval=30

[wifi]
interval=10

[battery]
instance=0
interval=30

[time]
command=date '+%a %l:%M %p'
interval=5
