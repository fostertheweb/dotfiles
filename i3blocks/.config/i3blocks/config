# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks

# Global properties
command=scripts/$BLOCK_NAME
separator_block_width=30
markup=pango
separator=false

[battery-charging]
command=echo -e '<span font_desc="Typicons">\ue02a</span>'
interval=once

[battery-full]
command=echo -e '<span font_desc="Typicons">\ue02b</span>'
interval=once

[volume]
label=ðŸŽ§
interval=once
signal=1

[backlight]
label=ðŸ”¦
command=brightnessctl | grep -E -o '[0-9]{1,3}?%' | head -1
interval=once
signal=2

[memory]
command=free | awk 'FNR == 2 {p = int($3 * 100 / $2); print p "%"}'
label=RAM
interval=30

[wifi]
label=ðŸ“¶
instance=wlp4s0
interval=10

[battery]
label=ðŸ”‹
instance=0
interval=30

[time]
command=date '+%a %I:%M %p'
interval=5
