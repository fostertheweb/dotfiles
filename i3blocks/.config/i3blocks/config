# Please s man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks

# Global properties
command=$SCRIPT_DIR/$BLOCK_NAME
separator_block_width=0
markup=pango
separator=false
min_width=160
align=right

[title]
command=xtitle -s
interval=persist
min_width=1280
align=center
color=#999999

[docker]
interval=60

[volume]
interval=once
signal=1

[backlight]
interval=once
signal=2

[memory]
interval=30

[wifi]
interval=10

[battery]
instance=0
interval=30
separator_block_width=40

[time]
command=date '+%a %l:%M %p'
interval=5
