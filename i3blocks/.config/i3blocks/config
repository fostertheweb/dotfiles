# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks

# Global properties
# command=/usr/libexec/i3blocks/$BLOCK_NAME
command=$SCRIPT_DIR/$BLOCK_NAME
separator_block_width=30
markup=pango
separator=false

[docker]
interval=60

[volume]
interval=once
signal=1

[backlight]
interval=once
signal=2

[memory]
label=RAM
command=$SCRIPT_DIR/$BLOCK_NAME
interval=30

[wifi]
instance=wlp4s0
interval=10

[battery]
instance=0
interval=30

[time]
command=date '+%a %l:%M %p'
interval=5

[redshift]
interval=60
