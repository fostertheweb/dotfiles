{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "model": "github-copilot/claude-sonnet-4",
  "mcp": {
    "apple": {
      "type": "local",
      "command": [
        "opencode",
        "x",
        "@kimsungwhee/apple-docs-mcp"
      ],
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": [
        "opencode",
        "x",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": [
        "container",
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "enabled": true
    }
  }
}
